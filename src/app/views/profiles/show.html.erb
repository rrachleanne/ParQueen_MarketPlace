<h1><%= @profile.name %>'s Profile</h1>


<div class="row">
<div class="card2" >
<div class="card-header">
<h6>Contact Details:</h6>
</div>
<ul class="list-group list-group-flush">
<li class="list-group-item"><%= image_tag @profile.picture, class:"card-img"%></li>
<li class="list-group-item"> <%= @profile.name %></li>
  <li class="list-group-item">Phone: +61 <%= @profile.phone %></li>

</ul>

</div>
<div class="card2" >
<div class="card-header">
<h6>Your Listings:</h6>
</div>
<ul class="list-group list-group-flush">
<% for product in @profile.products_to_sell %>
 
  <li class="list-group-item"><%= product.suburb %> <%= link_to 'Edit', edit_product_path(product.id) if current_user.id == product.vendor.id %></li>
 
  <% end %>

</ul>

</div>
<div class="card2" >
<div class="card-header">
<h6>Actions:</h6>
</div>
<ul class="list-group list-group-flush">
<li class="list-group-item"><%= link_to "New Listing", new_product_path, class: "btn btn-success" %></li>
<li class="list-group-item"><%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn btn-success" %></li>
<li class="list-group-item"><%= link_to 'Delete Profile', @profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></li>
  

</ul>

</div>






