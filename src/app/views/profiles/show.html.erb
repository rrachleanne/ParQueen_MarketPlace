
<div class="profilepage">
<div class="card2" >
  <ul class="list-group list-group-flush">
  
    <li class="list-group-item"><%= image_tag @profile.picture, class:"card-img"%> 
    <h5><%= @profile.name %>'s Profile</h5><br>
    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal">
  View Profile
</button> 
<%= link_to "New Listing", new_product_path, class: "btn" %></li>

  </ul>
  </div>
 <br>
 <br>





<div class="row">
<% for product in @profile.products_to_sell %>
        <div class="card" >
        <%= image_tag product.picture, class:"card-img-top" if product.picture.attached?%>
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-map-marker-alt"></i> <%= product.state %></h5>
          <p class="card-text"><%= product.suburb %></p>
          <p class="card-text"><%= product.category %></p>
          <p class="card-text">$<%= product.price %></p>
          
          <%= link_to 'Edit', edit_product_path(product), class: "btn"%>
          <%= link_to 'Delete', product, class: "btn", method: :delete, data: { confirm: 'Are you sure?' }  if current_user.id == product.vendor_id%>
        </div>
      </div>
        <% end %>
   </div>
  




   </div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= image_tag @profile.picture, class:"card-img"%>
      <br>
       <b><%= @profile.name %> </b>
       <br>
       <b>Phone: </b>+61<%= @profile.phone %>
    
      </div>
      <div class="modal-footer">
        <%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn" %>
        <%= link_to 'Delete Profile', @profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %> 
        <button type="button" class="btn" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>






