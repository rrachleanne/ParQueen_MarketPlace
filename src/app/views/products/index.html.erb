<div class="container">
<h1>Products</h1>
  <p>All currently listed products</p>            
  <table class="table">
    <thead>
      <tr>
      <th>Vendor</th>
      <th>State</th>
      <th>Suburb</th>
      <th>Category</th>
      <th>Price</th>
      <th>Availability</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.vendor_id %></td>
        <td><%= product.state %></td>
        <td><%= product.suburb %></td>
        <td><%= product.category %></td>
        <td>$<%= product.price %></td>
        <td><%= product.availability %></td>
        <td><%= link_to 'Show', product %></td>
        <% if @search %>
        <td><%= link_to 'Edit', edit_product_path(product) if current_user.id == product.vendor_id %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }  if current_user.id == product.vendor_id%></td>
        <%end%>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>



