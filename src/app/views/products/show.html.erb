

<div class="card" >
<%= image_tag @product.picture, class:"card-img-top"%>
  <div class="card-body">
    <h5 class="card-title"><%= @product.state %>, <%= @product.suburb %></h5>
    <p class="card-text"><%= @product.category %></p>
    <p class="card-text">$<%= @product.price %></p>
    <p class="card-text">Available: <%= @product.availability %></p>
    <%= link_to "Edit", edit_product_path(@product), class: "btn btn-success" %>
    <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %>

  </div>
  
</div>


